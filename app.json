{
  "expo": {
    "name": "Crypton",
    "slug": "bivalut",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/apkIcons/icon.png",
    "splash": {
      "image": "./src/assets/apkIcons/splashImg.png",
      "resizeMode": "cover"
    },
    "userInterfaceStyle": "light",

    "ios": {
      "supportsTablet": true,
      "splash": {
        "image": "./src/assets/apkIcons/splashImg.png",
        "resizeMode": "cover"
      },
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Разрешение на доступ к вашей галерее",
        "NSCameraUsageDescription": "Разрешение на доступ к вашей камере"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/apkIcons/adaptive-icon.png",
        "backgroundColor": "#140A4F"
      },
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.DOWNLOAD_WITHOUT_NOTIFICATION",
        "android.permission.ACCESS_NETWORK_STATE"
      ],
      "useNextNotificationsApi": true,
      "package": "com.jonele_umka.bivalut"
    },
    "web": {
      "favicon": "./src/assets/apkIcons/icon.png"
    },
    "extra": {
      "eas": {
        "projectId": "3090da21-81bd-4cfc-8a12-779a0b7025f6"
      }
    },
    "plugins": [
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow $(Crypton) to use Face ID."
        }
      ],
      "expo-localization"
    ]
  }
}
