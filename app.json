{
  "expo": {
    "name": "Smart Locks",
    "slug": "smartlock",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/apkIcons/icon.png",
    "splash": {
      "image": "./src/assets/apkIcons/splashImg.png",
      "resizeMode": "cover"
    },
    "userInterfaceStyle": "light",

    "ios": {
      "supportsTablet": true,
      "splash": {
        "image": "./src/assets/apkIcons/splashImg.png",
        "resizeMode": "cover"
      },
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Разрешение на доступ к вашей галерее",
        "NSCameraUsageDescription": "Разрешение на доступ к вашей камере",
        "NSFaceIDUsageDescription": "Allow $(Smart Locks) to use Face ID."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/apkIcons/adaptive-icon.png",
        "backgroundColor": "#fff"
      },
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyBvwtsqmVTETIZtsUUcmkW0nNUBeET_MeY"
        }
      },

      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.DOWNLOAD_WITHOUT_NOTIFICATION",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE"
      ],
      "package": "com.jonele_umka.smartlock"
    },
    "web": {
      "favicon": "./src/assets/apkIcons/icon.png"
    },
    "extra": {
      "eas": {
        "projectId": "ca4f4746-60f3-4a50-b5c9-cafb4a2641ec"
      }
    },
    "plugins": [
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps._some_id_here_"
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow $(Smart Lock) to use Face ID."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(Smart Lock) to use your location."
        }
      ],
      "expo-localization"
    ],
    "owner": "jonele_umka"
  }
}
