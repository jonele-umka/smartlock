{
  "expo": {
    "name": "Smartlock",
    "slug": "smartlock",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "com.joneleumka.smartlock",
    "icon": "./src/assets/apkIcons/icon.png",
    "splash": {
      "image": "./src/assets/apkIcons/splashImg.png",
      "resizeMode": "cover"
    },
    "userInterfaceStyle": "light",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.joneleumka.smartlock",
      "splash": {
        "image": "./src/assets/apkIcons/splashImg.png",
        "resizeMode": "cover"
      },
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Разрешение на доступ к вашей галерее",
        "NSCameraUsageDescription": "Разрешение на доступ к вашей камере",
        "NSFaceIDUsageDescription": "Allow Smartlock to use Face ID.",
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": ["com.joneleumka.smartlock"]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/apkIcons/adaptive-icon.png",
        "backgroundColor": "#fff"
      },
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyBvwtsqmVTETIZtsUUcmkW0nNUBeET_MeY"
        }
      },
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.DOWNLOAD_WITHOUT_NOTIFICATION",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.SCHEDULE_EXACT_ALARM"
      ],
      "package": "com.joneleumka.smartlock"
    },
    "web": {
      "favicon": "./src/assets/apkIcons/icon.png"
    },
    "extra": {
      "eas": {
        "projectId": "ca4f4746-60f3-4a50-b5c9-cafb4a2641ec"
      }
    },
    "plugins": [
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow Smartlock to use Face ID."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Smartlock to use your location."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Smartlock to access your camera",
          "microphonePermission": "Allow Smartlock to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./src/assets/avatar.png",
          "color": "#ffffff",
          "defaultChannel": "default"
        }
      ],
      
      "expo-localization",
      "expo-font"
    ],
    "owner": "jonele_umka"
  }
}
